# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = crlf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{cs,editorconfig,md,config}]
charset = utf-8

# 4 space indentation
[*.cs]
indent_style = space
indent_size = 4
